extends layout

block content
	div.container
		h1 Report
		div#success(class='alert alert-success alert-dismissible', role='alert', hidden=true) 
			button(type='button', class='close', data-dismiss='alert')
				span(aria-hidden='true')
					| &times;
				span(class='sr-only')
					| Close
			strong
				| Success!
		div#error(class='alert alert-danger alert-dismissible', role='alert', hidden=true) 
			button(type='button', class='close', data-dismiss='alert')
				span(aria-hidden='true')
					| &times;
				span(class='sr-only')
					| Close
			strong
				| Oops... Could not make update!
		form#form(role='form')
			div(class='form-group')
				select#userInput(type='text', class='form-control input-lg')
					option(selected disabled) -- Who --
					each user in users
						option(value=user._id)
							| #{user.name}
			div(class='form-group')
				select#wordInput(type='text', class='form-control input-lg')
					option(selected disabled) -- Word --
					each word in words
						option(value=word._id)
							| #{word.word}
			div(class='form-group')
				label(for='countInput') Number of Infractions
				div.container-fluid
					div(class='col-xs-4')
						a#decrement(type='button', class='btn btn-default btn-lg btn-block glyphicon glyphicon-minus') 
					div(class='col-xs-4')
						input#countInput(type='number', class='form-control input-lg num-center' value='1')
					div(class='col-xs-4')
						a#increment(type='button', class='btn btn-default btn-lg btn-block glyphicon glyphicon-plus') 
			a#submitOld(type='submit', class='btn btn-success btn-lg btn-block') Save
